<Window x:Class="Vibra_DesktopApp.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Vibra_DesktopApp.Views"
        xmlns:views="clr-namespace:Vibra_DesktopApp.Views.Components"
        xmlns:pages="clr-namespace:Vibra_DesktopApp.Views.Pages"
        xmlns:singletons="clr-namespace:Vibra_DesktopApp.Singleton"
        xmlns:vm="clr-namespace:Vibra_DesktopApp.ViewModels"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Title="MainWindow" Height="900" Width="1600">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>
    <Grid Background="AliceBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="12*"/>
            <RowDefinition Height="1.25*"/>
        </Grid.RowDefinitions>
        <views:Header Grid.Row="0" DataContext="{Binding HeaderVM}"/>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="5*"/>
            </Grid.ColumnDefinitions>
            <views:Sidebar Grid.Column="0" DataContext="{Binding SidebarVM}"/>

            <Grid Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="{Binding PanelWidth}"/>
                </Grid.ColumnDefinitions>
                
                <ContentControl Grid.Column="0" Content="{Binding CurrentPageViewModel}"/> 
                
            </Grid>

        </Grid>
        <views:Player DataContext="{Binding PlayerVM}" Grid.Row="2"/>
    </Grid>
</Window>
