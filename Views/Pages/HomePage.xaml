<UserControl x:Class="Vibra_DesktopApp.Views.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Vibra_DesktopApp.Views.Pages"
             xmlns:vm="clr-namespace:Vibra_DesktopApp.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="750" d:DesignWidth="1250">
    <Grid Background="Transparent">
        <Border CornerRadius="20" Background="#1D1512" Margin="0 0 5 5">
            <Grid VerticalAlignment="Top">
                <StackPanel Height="330" HorizontalAlignment="Left" Margin="0 10 0 0">
                    <TextBlock Text="Bài hát có nhiều lượt nghe" Width="auto" FontWeight="Bold" FontSize="28" Foreground="#FFE5D6" HorizontalAlignment="Left" Margin="20,20,0,10"/>
                    <ScrollViewer Width="1250" PanningMode="HorizontalOnly" CanContentScroll="True" HorizontalContentAlignment="Left" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled">
                        <ItemsControl ItemsSource="{Binding ListSong}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Width="200" Height="240" HorizontalAlignment="Left">
                                        <Button CommandParameter="{Binding}" Command="{Binding DataContext.PlayOrPauseThisSongCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" Width="160" Height="160" Cursor="Hand" Margin="0,0,0,10" Background="Transparent" BorderThickness="0">
                                            <Ellipse Width="160" Height="160">
                                                <Ellipse.Fill>
                                                    <ImageBrush ImageSource="{Binding thumbnail_path}" Stretch="UniformToFill"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                        </Button>
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="{Binding name}" FontSize="16" FontWeight="Bold" Foreground="#FFE5D6" Margin="20,5,0,0" Grid.Column="0"/>
                                            <TextBlock Text="View" FontSize="16" Foreground="#FFE5D6" Margin="20,25,0,0" Grid.Column="0"/>
                                            <Button Width="20" Height="20" FontSize="18" Grid.Column="1" Margin="0,0,25,0"/>
                                        </Grid>
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
