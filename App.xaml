<Application x:Class="Vibra_DesktopApp.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Vibra_DesktopApp"
             xmlns:vm="clr-namespace:Vibra_DesktopApp.ViewModels"
             xmlns:vm2="clr-namespace:Vibra_DesktopApp.ViewModels.Pages"
             xmlns:vm3="clr-namespace:Vibra_DesktopApp.ViewModels.Components"
             xmlns:views="clr-namespace:Vibra_DesktopApp.Views"
             xmlns:pages="clr-namespace:Vibra_DesktopApp.Views.Pages"
             xmlns:components="clr-namespace:Vibra_DesktopApp.Views.Components"
             xmlns:converters="clr-namespace:Vibra_DesktopApp.Converters"
             >
    <Application.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
        <converters:BoolToVisibilityConverter x:Key="InverseBoolToVisibility"
                                    Inverse="True"/>
        <converters:BoolToIconConverter x:Key="BoolToIconConverter" />
        <converters:TimeConverter x:Key="TimeConverter" />

        <DataTemplate DataType="{x:Type vm:LoginViewModel}">
            <views:LoginView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:SignUpViewModel}">
            <views:SignUpView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:HomeViewModel}">
            <pages:HomePage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm2:AlbumViewModel}">
            <pages:AlbumPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm2:ArtistViewModel}">
            <pages:ArtistPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm2:SearchViewModel}">
            <pages:SearchPage />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm2:UserViewModel}">
            <pages:UserPage />
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm3:HeaderViewModel}">
            <components:Header />
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm3:PlayerViewModel}">
            <components:Player />
        </DataTemplate>








        <Style x:Key="HorizontalScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Background" Value="#FFE5D6"/>
            <Setter Property="Height" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track"
                           Height="8">
                                <Track.Thumb>
                                    <Thumb Height="8"
                                   MinHeight="8">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Height="8"
                                                Background="#FFE5D6"
                                                CornerRadius="4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="VerticalScrollBarStyle" TargetType="ScrollBar">
            <Setter Property="Background" Value="#FFE5D6"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ScrollBar">
                        <Grid Background="Transparent">
                            <Track x:Name="PART_Track"
                           Width="8"
                           IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Width="8"
                                   MinWidth="8">
                                        <Thumb.Template>
                                            <ControlTemplate TargetType="Thumb">
                                                <Border Width="8"
                                                Background="#FFE5D6"
                                                CornerRadius="4"/>
                                            </ControlTemplate>
                                        </Thumb.Template>
                                    </Thumb>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#47342D"/>
            <Setter Property="Foreground" Value="#FFE5D6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="12,4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="6">
                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Background" Value="#1F1F1F"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                        CornerRadius="40">
                            <ContentPresenter
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="WindowButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                          VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="LightGray"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CloseButton" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="Black"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Red"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Application.Resources>
</Application>
